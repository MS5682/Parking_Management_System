<!DOCTYPE html>
<html>
<head>
  <title>로그인</title>
  <meta charset='utf-8'>
    <link rel='stylesheet' href='/stylesheets/style.css' />
    <script src ='/javascripts/code.jquery.com_jquery-3.7.0.min.js'></script>
    <script>
      function Submit(){
            if ($("#id").val() == ""){
              alert("아이디를 입력하세요");
              $("#id").focus();
              return;
            }
            if ($("#passwd").val() == ""){
              alert("비밀번호를 입력하세요");
              $("#passwd").focus();
              return;
            }
          }

          $(function () {
          $("form").submit(function (event) {
              event.preventDefault(); // 기본 폼 제출 동작 방지

              var form = $(this);
              var url = form.attr("action");

              $.ajax({
              type: "POST",
              url: url,
              data: form.serialize(),
              success: function (data, status, xhr) {
                  if (xhr.status === 200) {
                    alert(xhr.responseText);
                  window.location.href = "/";
                  } else {
                    alert(xhr.responseText);
                  window.location.href = "/user/login";
                  }
              },
              error: function (xhr, status, error) {
                alert(xhr.responseText);
                  window.location.href = "/user/login";
              }
              });
          });
      });
  </script>
</head>
<body>
  <h1>로그인</h1>
    <form action="/user/login" method="post" onsubmit="return Submit()">
    <div>
      <label for="user_code_0">사용자</label>
      <input type="radio" id="user_code" name="user_code" value="0">
      <label for="user_code_1">관리자</label>
      <input type="radio" id="user_code" name="user_code" value="1">
    </div>
    <div>
      <label for="id">아이디:</label>
      <input type="text" id="id" name="id" required>
    </div>
    <div>
      <label for="passwd">비밀번호:</label>
      <input type="password" id="passwd" name="passwd" required>
    </div>
    
    <div>
        <button type="submit">로그인</button>
    </div>
  </form>
</body>
</html>
